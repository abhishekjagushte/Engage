<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="MessageBox">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="fontFamily">Roboto</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <style name="leftMessageBox" parent="MessageBox">
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="rightMessageBox" parent="MessageBox">
        <item name="android:textColor">#000000</item>
    </style>


    <style name="EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">25dp</item>
        <item name="android:background">@drawable/edit_text</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="general_input">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="paddingEnd">16dp</item>
        <item name="android:background">@drawable/edit_text</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="OuterEditText">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">7dp</item>
    </style>

    <style name="TextView">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="SubmitButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/submit_button</item>
        <item name="android:textColor">@color/submit_button_text_color</item>

    </style>

    <style name="heading1">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="heading2">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">21sp</item>
    </style>

    <style name="event_text_large">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">21sp</item>
    </style>


    <style name="confirm_button_large">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="event" parent="CardView">
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="cardCornerRadius">10dp</item>
    </style>

    <style name="event.reminder">
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="list_item">
        <item name="android:textColor">@color/text_color_dark</item>
    </style>

    <style name="list_item.heading">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="list_item.heading.active">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="list_item.subheading">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="list_item.subheading.active">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="display_picture_style">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="style_type_box">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:background">@drawable/chat_screen_box</item>
        <item name="android:ems">10</item>
        <item name="android:inputType">textLongMessage|textMultiLine</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="message">
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="message.data">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="message.time">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <style name="message.data.left">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="message.data.left.image">
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="message.data.right.image">
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="message.data.right">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="message.time.left">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="message.time.right">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="imageViewMessage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:maxWidth">300dp</item>
        <item name="android:maxHeight">300dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

</resources>
